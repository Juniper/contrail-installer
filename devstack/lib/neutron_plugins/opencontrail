# Opencontrail Neutron Plugin
# -------------------------------

# Save trace settings
MY_XTRACE=$(set +o | grep xtrace)
set +o xtrace

CONTRAIL_CONF_DIR=/etc/contrail

function neutron_plugin_create_nova_conf() {
    :
}

function neutron_plugin_configure_common() {
    Q_PLUGIN_CONF_PATH=etc/neutron/plugins/opencontrail
    Q_PLUGIN_CONF_FILENAME=ContrailPlugin.ini
    Q_DB_NAME=neutron
    Q_PLUGIN_CLASS=${Q_PLUGIN_CLASS:-neutron_plugin_contrail.plugins.opencontrail.contrail_plugin.NeutronPluginContrailCoreV2}

    local NEUTRON_CONF_PLUGIN_DIR=$NEUTRON_DIR/$Q_PLUGIN_CONF_PATH
    mkdir -p $NEUTRON_CONF_PLUGIN_DIR
    local NEUTRON_PLUGIN_CONF=$NEUTRON_CONF_PLUGIN_DIR/$Q_PLUGIN_CONF_FILENAME
    touch $NEUTRON_PLUGIN_CONF

    local MULTI_TENANCY=${MULTI_TENANCY:-False}
    local APISERVER_PORT=${APISERVER_PORT:-8082}
    local APISERVER_IP=${APISERVER_IP:-localhost}
    local AUTH_URL=$KEYSTONE_SERVICE_PROTOCOL://$KEYSTONE_SERVICE_HOST:$KEYSTONE_AUTH_PORT/v2.0

    iniset $NEUTRON_PLUGIN_CONF apiserver multi_tenancy $MULTI_TENANCY
    iniset $NEUTRON_PLUGIN_CONF apiserver api_server_port $APISERVER_PORT
    iniset $NEUTRON_PLUGIN_CONF apiserver api_server_ip $APISERVER_IP

    iniset $NEUTRON_PLUGIN_CONF keystone auth_url $AUTH_URL
    iniset $NEUTRON_PLUGIN_CONF keystone auth_host $KEYSTONE_SERVICE_HOST
    iniset $NEUTRON_PLUGIN_CONF keystone admin_tenant_name $SERVICE_TENANT_NAME
    iniset $NEUTRON_PLUGIN_CONF keystone admin_password $SERVICE_PASSWORD
    iniset $NEUTRON_PLUGIN_CONF keystone admin_user $Q_ADMIN_USERNAME
}

function neutron_plugin_configure_service() {
    iniset $NEUTRON_CONF quotas quota_driver neutron.quota.ConfDriver
    local PY_PLUGIN_PATH=$(python -c "import neutron_plugin_contrail; print neutron_plugin_contrail.__path__[0]")
    iniset $NEUTRON_CONF DEFAULT api_extensions_path extensions:$PY_PLUGIN_PATH/extensions
}

